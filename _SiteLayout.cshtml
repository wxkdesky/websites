<!DOCTYPE html>
<html lang="zh">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@Page.Title - 我的 ASP.NET 网页</title>
        <link href="~/Content/themes/base/jquery.ui.all.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <script src="~/Scripts/jquery-1.8.2.min.js"></script>
        <script src="~/Scripts/jquery-ui-1.8.24.js"></script>
        <script src="~/Scripts/modernizr-2.6.2.js"></script>
        <meta name="viewport" content="width=device-width" />
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title"><a href="http://www.sim.ac.cn/">
                    <img src="~/Images/simit.jpg" alt="SIMIT" id="imgSIMIT"  onshow="adjust()"/>
                    </a><!--将你的徽标放置在此处-->                   
                    </p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @if (WebSecurity.IsAuthenticated) {
                            <text>
                                Hello, <a class="email" href="~/Account/Manage" title="Manage">@WebSecurity.CurrentUserName</a>!
                                <form id="logoutForm" action="~/Account/Logout" method="post">
                                    @AntiForgery.GetHtml()
                                    <a href="javascript:document.getElementById('logoutForm').submit()">注销</a>
                                </form>
                            </text>
                        } else {
                            <ul>
                                <li><a href="~/Account/Register">注册</a></li>
                                <li><a href="~/Account/Login">登录</a></li>
                            </ul>
                        }
                    </section>
                    <nav>
                        <ul id="menu">
                            <li><a href="~/">主页</a></li>
                            <li><a href="~/About">关于</a></li>
                            <li><a href="~/Contact">联系方式</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - 版权归中科院微系统所所有</p>
                </div>
            </div>
        </footer>
        @RenderSection("Scripts", required: false)
    </body>
</html>
<script>
    var image = new Image();
    var imgSIMIT = document.getElementById("imgSIMIT");
    image.src = imgSIMIT.src;
    var realWidth = image.width;
</script>
<script type="text/javascript">
  window.onresize=  function change()
  {
        var imgSIMIT = document.getElementById("imgSIMIT");
        var xwidth = document.body.clientWidth;
            imgSIMIT.width = 3 / 4 * xwidth;
            if (imgSIMIT.width <= realWidth)
                imgSIMIT.width = 5 / 6 * xwidth;
            else
                imgSIMIT.width = realWidth;

            

  }
  function adjust()
  {
      var imgSIMIT = document.getElementById("imgSIMIT");
      var xwidth = document.body.clientWidth;
      if (imgSIMIT.width > xwidth)
          imgSIMIT.width = 3 / 4 * xwidth;
  }
</script>